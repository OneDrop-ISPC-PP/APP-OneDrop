<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/layout_edit_reg_gly"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="155dp"
            android:layout_height="87dp"
            android:layout_gravity="right"
            app:srcCompat="@drawable/onedrop" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/add_reg_gly_date"
            android:textColor="@color/blueonedrop"
            android:textSize="24dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/add_date_gly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:ems="10"
            android:hint="(Opcional)"
            android:textColor="@color/blackonedrop"
            android:textStyle="bold"
            android:inputType="datetime"
            android:paddingBottom="30dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif-condensed"
            android:paddingTop="30dp"
            android:text="@string/add_reg_gly_value"
            android:textColor="@color/blueonedrop"
            android:textSize="24dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/add_value_gly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:ems="10"
            android:hint="@string/add_reg_gly_value_placeholder"
            android:textColor="@color/blackonedrop"
            android:textStyle="bold"
            android:inputType="numberDecimal"
            android:paddingBottom="30dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif-condensed"
            android:paddingTop="30dp"
            android:text="@string/add_reg_gly_notes"
            android:textColor="@color/blueonedrop"
            android:textSize="24dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/add_notes_gly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/blackonedrop"
            android:textStyle="bold"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/add_reg_gly_notes_placeholder"
            android:inputType="textMultiLine"
            android:paddingBottom="30dp" />

    </LinearLayout>

    </ScrollView>

</LinearLayout>